{
    "preset": "ts-jest",
    "transform": {
        "^.+\\.[tj]s$": "babel-jest"
    },
    "collectCoverage": true,
    "collectCoverageFrom": [
        "src/**/*.ts"
    ],
    "coveragePathIgnorePatterns": [
        "node_modules",
        "build"
    ],
    "coverageDirectory": "<rootDir>/coverage/",
    "coverageThreshold": {
        "global": {
            "branches": 20,
            "functions": 30,
            "lines": 50,
            "statements": 50
        }
    },
    "globals": {
        "SERVER_HOSTNAME": "localhost",
        "SERVER_PORT": 3510
    },
    "verbose": true,
    "testRegex": "/test/.*\\.[jt]s$"
}

